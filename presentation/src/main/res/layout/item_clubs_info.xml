<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backround"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/shape_linaer"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="d"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_name_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_country"
            app:layout_constraintStart_toEndOf="@id/img_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="aaaaaa"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_club_burn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_name_club"
            app:layout_constraintStart_toStartOf="@id/tv_name_club"
            app:layout_constraintEnd_toEndOf="@id/tv_name_club"
            android:text="asddsadsadsa"
            android:layout_marginStart="4dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/tv_country"
            app:layout_constraintEnd_toStartOf="@id/tv_name_club"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_stadium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/const_country"
        app:layout_constraintStart_toStartOf="@id/const_country"
        app:layout_constraintEnd_toEndOf="@id/const_country"
        android:background="@drawable/shape_linaer"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:id="@+id/tv_stadium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="StamforB"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            />


        <ImageView
            android:id="@+id/img_Stadium"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@id/tv_stadium"
            app:layout_constraintStart_toStartOf="@id/tv_stadium"
            app:layout_constraintEnd_toEndOf="@id/tv_stadium"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="8dp"

            />

        <TextView
            android:id="@+id/tv_stadium_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_Stadium"
            app:layout_constraintStart_toStartOf="@id/img_Stadium"
            app:layout_constraintEnd_toEndOf="@id/img_Stadium"
            android:text="asddsadsadsa"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/tv_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/const_stadium"
        app:layout_constraintStart_toStartOf="@id/const_stadium"
        app:layout_constraintEnd_toEndOf="@id/const_stadium"
        android:text="asddsadsadsa"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_coach_cup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_players"
        app:layout_constraintStart_toStartOf="@id/const_country"
        app:layout_constraintEnd_toEndOf="@id/const_country"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_linaer"
        >

        <ImageView
            android:id="@+id/img_coach"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:id="@+id/tv_coach_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/img_coach"
            app:layout_constraintTop_toTopOf="parent"
            android:text="asddsadsadsa"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            />


        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_coach_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="История клуба"
            />


        <TextView
            android:id="@+id/tv_mutch_cup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_history"
            app:layout_constraintStart_toStartOf="@id/tv_history"
            app:layout_constraintEnd_toEndOf="@id/tv_history"
            android:text="asddsadsadsa"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_ligaChampions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_mutch_cup"
            app:layout_constraintStart_toStartOf="@id/tv_mutch_cup"
            app:layout_constraintEnd_toEndOf="@id/tv_mutch_cup"
            android:text="asddsadsadsa"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="8dp"

            />

        <TextView
            android:id="@+id/tv_apl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_ligaChampions"
            app:layout_constraintStart_toStartOf="@id/tv_ligaChampions"
            app:layout_constraintEnd_toEndOf="@id/tv_ligaChampions"
            android:text="asddsadsadsa"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
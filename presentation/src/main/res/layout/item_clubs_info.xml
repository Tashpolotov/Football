<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_name_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="aaaaaa"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name_club"
        app:layout_constraintStart_toStartOf="@id/tv_name_club"
        app:layout_constraintEnd_toEndOf="@id/tv_name_club"
        android:text="d"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/tv_country"
        app:layout_constraintStart_toStartOf="@id/tv_country"
        app:layout_constraintEnd_toEndOf="@id/tv_country"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="16dp"

        />

    <TextView
        android:id="@+id/tv_stadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_avatar"
        app:layout_constraintStart_toStartOf="@id/img_avatar"
        app:layout_constraintEnd_toEndOf="@id/img_avatar"
        android:text="StamforB"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/img_Stadium"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/tv_stadium"
        app:layout_constraintStart_toStartOf="@id/tv_stadium"
        app:layout_constraintEnd_toEndOf="@id/tv_stadium"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="16dp"

        />


    <TextView
        android:id="@+id/tv_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_Stadium"
        app:layout_constraintStart_toStartOf="@id/img_Stadium"
        app:layout_constraintEnd_toEndOf="@id/img_Stadium"
        android:text="asddsadsadsa"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>